<section class="row">
  <h1>Book Shop</h1>

  {{#if hasBooks}}
    {{#each books as |book|}}
      <a href='/books/{{book.Title}} ' class='text-decoration-none text-dark col'>
        <div class='card mb-3' style='max-width: 25rem;'>
          <div class='row g-0'>
            <div class='col-md-4'>
              <img
                src='{{book.Image}}'
                class='img-fluid rounded-start imageResponsive'
                alt='{{book.Title}}'
              />
            </div>
            <div class='col-md-8'>
              <div class='card-body'>
                <h5 class='card-title'>{{book.Title}}</h5>
                <h6 class='card-text'>{{book.Author}}</h6>
                <p class='card-text'>{{book.Category}}</p>
                <p class='card-text'><small
                    class='text-muted'
                  >{{book.Year}}</small></p>
                <input
                  type='hidden'
                  name='BookTitleCard'
                  id='bookTitleCard'
                  value='{{book.Title}}'
                />
              </div>
            </div>
          </div>
        </div>
      </a>
    {{/each}}
  {{else}}
    <div class='alert alert-primary mx-6' role='alert'>
      <i class='bi bi-exclamation-triangle-fill'></i>
      You need to create this item first
    </div>
    <a class='btn btn-dark' href='/admin/books/create-Books'>Create Book</a>
  {{/if}}

</section>