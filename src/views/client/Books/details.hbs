<Section>
  <div class='row'>
    <h1 class='col-md-4 px-0'>Book searched:</h1>
    <p class='text-primary col-1 px-1 h1'>{{title}}</p>
  </div>

  <div class='card mb-3' style='min-width: 40rem;'>
    <div class='row g-0'>
      <div class='col-md-4'>
        <img
          src='{{book.Image}}'
          class='img-fluid rounded-start imageResponsive'
          alt='{{book.Title}}'
        />
      </div>
      <div class='col-md-8'>
        <div class='card-body'>
          <h5 class='card-title'>Title: {{book.Title}}</h5>
          <h6 class='card-text'>Author: {{book.Author}}</h6>
          <p class='card-text'><span class='fw-bold'>Description:</span>
            {{book.Description}}</p>
          <p class='card-text'><span class='fw-bold'>Category:</span> {{book.Category}}</p>
          <p class='card-text'><small
              class='text-muted'
            >{{book.Year}}</small></p>
          <input
            type='hidden'
            name='BookTitleCard'
            id='bookTitleCard'
            value='{{book.Title}}'
          />
        </div>
      </div>
    </div>
  </div>

</Section>