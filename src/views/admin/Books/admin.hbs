<section class='row'>
  <div>
    <h1 class='float-start'>Editing Books</h1>
    <a class='btn btn-primary float-end' href='/admin/books/create-Books'>Create
      Book
      <i class='bi bi-plus-circle'></i></a>
  </div>
  {{#if hasBooks}}

    {{#each books as |book|}}
      <div class='card mb-3 col ms-2 px-0' style='max-width: 540px;'>
        <div class='row g-0'>
          <div class='col-md-4'>
            <img
              src='{{book.Image}}'
              class='img-fluid rounded-start imageResponsive'
              alt='{{book.Title}}'
            />
          </div>
          <div class='col-md-8'>
            <div class='card-body'>
              <h5 class='card-title'>{{book.Title}}</h5>
              <p class='card-text'>{{book.Author}}</p>
              <form action='/edit/Book' method='POST'>
                <a
                  class='btn btn-info float-start'
                  href='/admin/books/edit/{{book.id}}?edit=true'
                >Edit</a>
              </form>
              <form action='/admin/books/delete' method='post'>
                <input
                  type='hidden'
                  name='BookId'
                  value='{{book.id}}'
                  id='bookId'
                />
                <button
                  id='deleteBooks'
                  class='btn btn-danger float-end'
                  type='submit'
                  onclick="return confirm('Are you sure you want to delete this book?');"
                >Delete</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    {{/each}}

  {{else}}
    <div class='alert alert-danger mx-6' role='alert'>
      <i class='bi bi-exclamation-triangle-fill'></i>
      You need to create this item first
    </div>
    <a class='btn btn-dark' href='/admin/books/create-Books'>Create Book</a>

  {{/if}}
</section>